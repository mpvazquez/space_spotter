<!DOCTYPE html>
<html>
<head>
  <title>SpaceSpotter</title>
  <%= stylesheet_link_tag    "application", media: "all", "data-turbolinks-track" => true %>
  <%= javascript_include_tag "application", "data-turbolinks-track" => true %>
  <%= csrf_meta_tags %>
</head>
<body>
<header>
  <%= link_to "Home", root_path %>

  <% if logged_in? %>
    <p><%= link_to("#{current_user.first_name}'s Profile", user_path(current_user)) %></p>
    <p><%= link_to("Log Out", "/session", method: "delete") %></p>
  <% else %>
    <p><%= link_to("Please Log In","/login") %></p>
    <p><%= link_to("Register Here", new_user_path) %></p>
  <% end %>

</header>

<%= yield %>

</body>
</html>
