<h2><%= @listing.id.nil? ? "Create New Listing" : "Update Listing" %></h2>

<div class="left-column">
  <%= form_for [@vendor, @listing] do |f| %>
    <%= f.label :title %>
    <%= f.text_field :title %><br>

    <%= f.label :listing_photo_url, "Photo Link" %>
    <%= f.text_field :listing_photo_url %><br>  

    <%= f.label :description %>
    <%= f.text_field :description %><br>

    <%= f.label :address %>
    <%= f.text_field :address %><br>

    <%= f.label :city %>
    <%= f.text_field :city %><br>

    <%= f.label :state %>
    <%= f.text_field :state %><br>

    <%= f.label :zip_code, "Zip Code" %>
    <%= f.text_field :zip_code %><br>

    <%= f.label :rate %>
    <%= f.text_field :rate %><br>

    <%= f.submit @listing.id.nil? ? "Create" : "Save Changes" %>
  <% end %>

</div>

<div class="right-column">
  <% if @listing.id.nil?  %>
  <% else %>
    <h3>Listing Availability</h3>
    <%= link_to "Add New Timeslot", new_vendor_listing_timeslot_path(@vendor, @listing) %>
    <ul>
      <% @timeslots.each do |timeslot| %>
      <li class="listing-timeslot"><%= timeslot.date %> From: <%= timeslot.start_time.strftime(format=' %l:%M %p') %> To: <%= timeslot.stop_time.strftime(format='%l:%M %p') %> - <%= link_to "Update", edit_vendor_listing_timeslot_path(@vendor, @listing, timeslot) %> </li>
      <% end %>
    </ul>
  <% end %>
</div>