html, body, div, h1, h2, h3, h4, h5, h6, ul, ol, dl, li, dt, dd, p, blockquote,  
pre, form, fieldset, table, th, td { margin: 0; padding: 0; }

@import url(http://fonts.googleapis.com/css?family=Oswald);
@import url(http://fonts.googleapis.com/css?family=Lato:100);
@import url(http://fonts.googleapis.com/css?family=Open+Sans:300);

body {
  background-image: url('<%= asset_data_uri("crossword.png") %>');
  background-repeat: repeat;
}

header {
  color: white;
  background-color: rgba(215, 44, 44, 0.75);
}

h1 {
  margin: 0 auto;
  font-family: Oswald;
  font-size: 3em;
  text-align: center;
  text-transform: uppercase;
}

h1 a {
  color: white;
  letter-spacing: .05em;
  text-decoration: none;
  text-shadow: 4px 4px 5px rgba(150, 150, 150, 0.5);
}

h2 {
  font-family: Lato;
  font-size: 2em;
}

h3 {
  font-family: Lato;
}

p {
  text-align: justify;
  font-size: 1em;
  font-family: Open Sans;
}

a {
  color: brown;
}

div.hero {
  text-align: center;
  color: white;
  background-size: cover;
  background-image: url('<%= asset_data_uri("map.jpg") %>');
  width: 100%;
  height: 400px;
}

div.main-search-input {
  display: inline-block;
  text-align: left;
  text-transform: uppercase;
}

div.main-search {
  position: absolute;
  top: 30%;
  margin-left: 30%;
  margin-right: 30%;
  background-color: rgba(0, 0, 0, .4);
  padding: 1em;
  border-radius: 100%;
}

.login {
  margin-left: 5%;
  margin-top: -3em;
  text-align: left;
  top: 0;
}

.login a {
  color: white;
  text-decoration: none;
}

.listing-photo {
  width: 300px;
}

.left-column {
  margin-top: 1em;
  display: inline-block;
  width: 60%;
}

.right-column {
  margin-top: 1em;
  display: inline-block;
  vertical-align: top;
  width: 30%;
}

.right-column h3 {
  margin-top: 0;
}

.booked {
  text-decoration: line-through;
}

.wrapper {
  margin-top: 1em;
  margin-left: 5%;
  margin-right: 5%;
}